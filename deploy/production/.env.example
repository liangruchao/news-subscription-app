# ============================================================
# Production 环境配置模板
# ============================================================
# 复制此文件为 .env 并填入实际值

# 环境标识
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=news-production
GIT_COMMIT=latest

# ============================================================
# MySQL 配置
# ============================================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=news_app
MYSQL_USER=newsapp
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_PORT=3306

# ============================================================
# Redis 配置
# ============================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_DB=0

# ============================================================
# 后端配置
# ============================================================
BACKEND_PORT=8081
SPRING_PROFILES_ACTIVE=production
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseStringDeduplication

# ============================================================
# NewsAPI 配置
# ============================================================
# 注册地址: https://newsapi.org/register
NEWSAPI_API_KEY=your_newsapi_key_here

# ============================================================
# Nginx 配置
# ============================================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SERVER_NAME=your-production-domain.com

# ============================================================
# 日志配置
# ============================================================
LOG_LEVEL=INFO
ENABLE_ACCESS_LOG=true

# ============================================================
# 监控和告警（可选）
# ============================================================
ENABLE_MONITORING=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_ALERT=admin@yourdomain.com
