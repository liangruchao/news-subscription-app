# ============================================================
# Staging 环境配置模板
# ============================================================
# 复制此文件为 .env 并填入实际值

# 环境标识
ENVIRONMENT=staging
COMPOSE_PROJECT_NAME=news-staging
GIT_COMMIT=latest

# ============================================================
# MySQL 配置
# ============================================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=news_app_staging
MYSQL_USER=newsapp_staging
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_PORT=3306

# ============================================================
# Redis 配置
# ============================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_DB=1

# ============================================================
# 后端配置
# ============================================================
BACKEND_PORT=8081
SPRING_PROFILES_ACTIVE=staging
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC

# ============================================================
# NewsAPI 配置
# ============================================================
# 注册地址: https://newsapi.org/register
NEWSAPI_API_KEY=your_newsapi_key_here

# ============================================================
# Nginx 配置
# ============================================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SERVER_NAME=your-staging-domain.com

# ============================================================
# 日志配置
# ============================================================
LOG_LEVEL=DEBUG
ENABLE_ACCESS_LOG=true
